{
  "name": "newsheadlines",
  "displayName": "News Headlines",
  "description": "",
  "version": "0.0.9",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "newsheadlines.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "News Headlines",
      "properties": {
        "newsheadlines.newsSource": {
          "type": "array",
          "default": ["https://news.google.com/rss/search?q=inurl:www.reuters.com&hl=en-US&gl=US&ceid=US:en"],
          "description": "The list of news sources. It must be RSS2.0. The change may take a few minues to reflect.",
          "minItems": 1
        },
        "newsheadlines.length": {
          "type": "number",
          "default": 40,
          "minimum": 5,
          "description": "The length of the headline's character on the status bar"
        },
        "newsheadlines.showIntervalSeconds": {
          "type": "number",
          "default": 30,
          "minimum": 10,
          "description": "Interval seconds to show a next news. Reload required."
        },
        "newsheadlines.newsFetchIntervalSeconds": {
          "type": "number",
          "default": 60,
          "minimum": 30,
          "description": "Interval seconds to update news on the internet."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/jsdom": "^20.0.0",
    "@types/node-fetch": "^2.6.2",
    "axios": "^0.27.2",
    "jsdom": "^20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/europeanplaice/vscode-NewsHeadline"
  }
}
